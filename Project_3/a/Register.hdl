/**
 * 16-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 * else out does not change
 */

CHIP Register {
    IN in[16], load;
    OUT out[16];

    PARTS:
    // Put your code here:
    Mux(a = outloop0, b = in[0], sel = load, out = out0);
    DFF(in = out0, out = outloop0, out = out[0]);

    Mux(a = outloop1, b = in[1], sel = load, out = out1);
    DFF(in = out1, out = outloop1, out = out[1]);

    Mux(a = outloop2, b = in[2], sel = load, out = out2);
    DFF(in = out2, out = outloop2, out = out[2]);

    Mux(a = outloop3, b = in[3], sel = load, out = out3);
