    Mux(a = outloop4, b = in[4], sel = load, out = out4);
    DFF(in = out4, out = outloop4, out = out[4]);

    Mux(a = outloop5, b = in[5], sel = load, out = out5);
    DFF(in = out5, out = outloop5, out = out[5]);

    Mux(a = outloop6, b = in[6], sel = load, out = out6);
    DFF(in = out6, out = outloop6, out = out[6]);

    Mux(a = outloop7, b = in[7], sel = load, out = out7);
